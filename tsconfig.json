{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,                           // ‚ùå Disallow JS for stricter TS enforcement
    "skipLibCheck": true,
    "strict": true,                             // ‚úÖ Enable strict mode
    "noImplicitAny": true,                      // üîí Disallow implicit any types
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",                           // ‚úÖ Base for absolute imports
    "paths": {
      "@/*": ["*"]                              // üìÅ Allows `@/components/...` style imports
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,   // ‚úÖ Avoids casing errors on different OS
    "allowSyntheticDefaultImports": true,       // ‚úÖ Helps with libraries like React
    "strictNullChecks": true,                   // üîí Safer code with null/undefined
    "noFallthroughCasesInSwitch": true,         // üß† Catch potential logic bugs
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
